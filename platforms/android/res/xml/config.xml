<?xml version='1.0' encoding='utf-8'?>
<widget id="com.collegeloopin" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <allow-intent href="market:*" />
    <splash src="res/screen/android/screen-default.png" />
    <name>College LoopIn</name>
    <description>
        College LoopIn is a community powered resource sharing social network
    </description>
    <author email="dev@collegeloopin.com" href="http://collegeloopin.com">
        College LoopIn Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="res/icon/icon.png" />
    <icon density="ldpi" platform="android" src="res/icon/drawable-ldpi/icon.png" />
    <icon density="mdpi" platform="android" src="res/icon/drawable-mdpi/icon.png" />
    <icon density="hdpi" platform="android" src="res/icon/drawable-hdpi/icon.png" />
    <icon density="xhdpi" platform="android" src="res/icon/drawable-xhdpi/icon.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="20000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
</widget>
