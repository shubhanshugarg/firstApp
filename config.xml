<?xml version='1.0' encoding='utf-8'?>
<widget id="com.collegeloopin" version="0.0.2" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>College LoopIn</name>
    <description>
        College LoopIn is a community powered resource sharing social network
    </description>
    <author email="dev@collegeloopin.com" href="http://collegeloopin.com">
        College LoopIn Team
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <icon src="res/icon/icon.png"/>

    <icon src="res/icon/drawable-ldpi/icon.png" platform="android" density="ldpi"/>
    <icon src="res/icon/drawable-mdpi/icon.png" platform="android" density="mdpi"/>
    <icon src="res/icon/drawable-hdpi/icon.png" platform="android" density="hdpi"/>
    <icon src="res/icon/drawable-xhdpi/icon.png" platform="android" density="xhdpi"/>

    <platform name="android">
        <splash src="res/screen/android/screen-default.png"/>
    </platform>
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="20000"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="AutoHideSplashScreen" value="false"/>
</widget>
